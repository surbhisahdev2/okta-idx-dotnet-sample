
@using Okta.Idx.Sdk

@model List<IdpOption>

@if (Model.Count > 0)
{

    @Html.ActionLink("Project Details", "Project", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-project", @id = "ProjectBtn" })

    <form class="form-horizontal">

        @foreach (IdpOption idpOption in Model)
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sign In with @(idpOption.Name)" class="btn btn-primary btn-stretch-wide" onclick="goTo(event, '@idpOption.Href')" />
                </div>
            </div>
        }
    </form>
    <script>
        function goTo(event, href) {
            event.preventDefault();
            window.location.href = href;
        }
    </script>
}
