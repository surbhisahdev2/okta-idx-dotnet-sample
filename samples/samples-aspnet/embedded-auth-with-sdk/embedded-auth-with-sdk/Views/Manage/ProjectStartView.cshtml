@model embedded_auth_with_sdk.Models.ProjectStartViewModel

@{
    Page.Title = "Add Project Details";
}


<div class="row d-center" ">
    <div class="col-md-8">
        
            @using (Html.BeginForm("ProjectAsync", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Enter Project Name</h4>

                <h5>For example: Okta</h5>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <div>
                    @Html.LabelFor(m => m.ProjectName, new { @class = "control-label" })
                </div>
                <div>
                    @Html.EditorFor(m => m.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="col-md-10">
                <div>
                    @Html.LabelFor(m => m.Implementation, new { @class = "control-label" })
                </div>
                <div>
                    @Html.EditorFor(m => m.Implementation, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="col-md-10">

                <div>
                    @Html.LabelFor(m => m.UseCase, new { @class = "control-label" })
                </div>
                <div>
                    @Html.EditorFor(m => m.UseCase, new { htmlAttributes = new { @class = "form-control" } })
                </div>

            </div>

            <div class="col-md-10">

                <div>
                    @Html.LabelFor(m => m.User, new { @class = "control-label" })
                </div>
                <div>
                    @Html.EditorFor(m => m.User, new { htmlAttributes = new { @class = "form-control" } })
                </div>

            </div>

        </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Add to Sheets" class="btn btn-primary btn-stretch-wide" id="ProjectBtn" />
                    </div>
                </div>
            }
    

            </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
